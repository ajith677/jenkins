//                     docker.withRegistry('https://index.docker.io/v1/', REGISTRY_CREDENTIALS) {
//                         sh "docker push ${DOCKER_IMAGE}:${IMAGE_TAG}"
//                     }
//                 }
//             }
//         }

        stage('Deploy') {
            steps {
                sh "sudo docker stop springboot-app || true && docker rm springboot-app || true"
                sh "sudo docker run -d --name springboot-app -p 8081:8081 ${DOCKER_IMAGE}:${IMAGE_TAG}"
            }
        }
    }

    post {
        success {
            echo '✅ Application deployed successfully!'
        }
        failure {
            echo '❌ Deployment failed.'
        }
    }
}
