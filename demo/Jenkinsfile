pipeline {
    agent any

    environment {
//         DOCKER_IMAGE = 'your-dockerhub-username/springboot-app'
        IMAGE_TAG = "${BUILD_NUMBER}"
//         REGISTRY_CREDENTIALS = 'dockerhub-creds-id'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ajith677/jenkins.git'
            }
        }

//         stage('Build') {
