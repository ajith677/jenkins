        stage('Build Docker Image') {
            steps {
            dir('demo'){
                sh "sudo docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} ."

                            }
            }
        }

//         stage('Push Docker Image') {
//             steps {
