pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'springboot-app'
        IMAGE_TAG = "${BUILD_NUMBER}"
        // REGISTRY_CREDENTIALS = 'dockerhub-creds-id' // Uncomment if pushing to Docker Hub
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ajith677/jenkins.git'
            }
        }

        // Optional: Uncomment if you need to build the Spring Boot application

        stage('Build') {
            steps {
                dir('demo') {
                    sh './gradlew clean package -DskipTests=false'
                }
            }
        }

        stage('Test') {
            steps {
                dir('demo') {
                    sh './gradlew test'
                }
            }
        }
         stage('sonar') {
                    steps {
                        dir('demo') {
                            sh './gradlew sonarqube \
                                  -Dsonar.token=squ_4e04534d3d71ebc95d5b7ecfda872a05ad3bf7c7 \
                                  -Dsonar.host.url=http://localhost:9000'

                        }
                    }
                }


        stage('Build Docker Image') {
            steps {
                dir('demo') {
                    sh "docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} ."
                }
            }
        }

//         // Optional: Uncomment if you want to push the image to a registry
//         /*
//         stage('Push Docker Image') {
//             steps {
//                 script {
//                     docker.withRegistry('https://index.docker.io/v1/', REGISTRY_CREDENTIALS) {
//                         sh "docker push ${DOCKER_IMAGE}:${IMAGE_TAG}"
//                     }
//                 }
//             }
//         }
//         */

        stage('Deploy') {
            steps {
                script {
                    // Stop and remove existing container if it exists
                    sh 'docker stop springboot-app || true'
                    sh 'docker rm springboot-app || true'
                    // Run the new container
                    sh "docker run -d --name springboot-app -p 8081:8081 ${DOCKER_IMAGE}:${IMAGE_TAG}"
                }
            }
        }
    }

    post {
        success {
            echo '✅ Application deployed successfully!'
        }
        failure {
            echo '❌ Deployment failed.'
        }
    }
}